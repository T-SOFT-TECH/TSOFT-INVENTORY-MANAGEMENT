{
  "projectId": "tsoftmart-inventory-invoice-system",
  "databases": [
    {
      "id": "inventory-invoice-db",
      "name": "Inventory Invoice DB",
      "collections": [
        {
          "id": "products",
          "name": "Products",
          "permissions": ["read(\"any\")", "write(\"team:admin\")"],
          "attributes": [
            {
              "key": "name",
              "type": "string",
              "size": 255,
              "required": true
            },
            {
              "key": "category",
              "type": "string",
              "size": 100,
              "required": true
            },
            {
              "key": "description",
              "type": "string",
              "size": 65535,
              "required": false
            },
            {
              "key": "price",
              "type": "double",
              "required": true
            },
            {
              "key": "cost",
              "type": "double",
              "required": false
            },
            {
              "key": "stockQuantity",
              "type": "integer",
              "required": true,
              "min": 0
            },
            {
              "key": "lowStockThreshold",
              "type": "integer",
              "required": true,
              "min": 0,
              "default": 10
            },
            {
              "key": "sku",
              "type": "string",
              "size": 50,
              "required": true
            },
            {
              "key": "status",
              "type": "string",
              "size": 20,
              "required": true,
              "array": false,
              "elements": ["active", "archived"]
            },
            {
              "key": "imageUrl",
              "type": "string",
              "size": 255,
              "required": false
            },
            {
              "key": "totalQuantitySold",
              "type": "integer",
              "required": true,
              "min": 0,
              "default": 0
            },
            {
              "key": "totalRevenue",
              "type": "double",
              "required": true,
              "default": 0
            }
          ],
          "indexes": [
            {
              "key": "sku",
              "type": "unique",
              "attributes": ["sku"]
            },
            {
              "key": "category",
              "type": "key",
              "attributes": ["category"]
            },
            {
              "key": "status",
              "type": "key",
              "attributes": ["status"]
            }
          ]
        },
        {
          "id": "customers",
          "name": "Customers",
          "permissions": ["read(\"any\")", "write(\"team:admin\")"],
          "attributes": [
            {
              "key": "name",
              "type": "string",
              "size": 255,
              "required": true
            },
            {
              "key": "email",
              "type": "string",
              "size": 255,
              "required": true
            },
            {
              "key": "phone",
              "type": "string",
              "size": 50,
              "required": false
            },
            {
              "key": "address",
              "type": "string",
              "size": 500,
              "required": false
            },
            {
              "key": "status",
              "type": "string",
              "size": 20,
              "required": true,
              "array": false,
              "elements": ["active", "inactive"]
            },
            {
              "key": "notes",
              "type": "string",
              "size": 65535,
              "required": false
            },
            {
              "key": "totalOrders",
              "type": "integer",
              "required": false,
              "min": 0,
              "default": 0
            },
            {
              "key": "totalSpent",
              "type": "double",
              "required": false,
              "default": 0
            },
            {
              "key": "lastOrderDate",
              "type": "datetime",
              "required": false
            }
          ],
          "indexes": [
            {
              "key": "email",
              "type": "unique",
              "attributes": ["email"]
            },
            {
              "key": "status",
              "type": "key",
              "attributes": ["status"]
            }
          ]
        },
        {
          "id": "sales",
          "name": "Sales",
          "permissions": ["read(\"any\")", "write(\"team:admin\")"],
          "attributes": [
            {
              "key": "customerId",
              "type": "string",
              "size": 255,
              "required": true
            },
            {
              "key": "invoiceNumber",
              "type": "string",
              "size": 50,
              "required": true
            },
            {
              "key": "products",
              "type": "string",
              "size": 65535,
              "required": true
            },
            {
              "key": "totalAmount",
              "type": "double",
              "required": true,
              "min": 0
            },
            {
              "key": "date",
              "type": "datetime",
              "required": true
            },
            {
              "key": "status",
              "type": "string",
              "size": 20,
              "required": true,
              "array": false,
              "elements": ["completed", "pending", "cancelled"]
            },
            {
              "key": "paymentStatus",
              "type": "string",
              "size": 20,
              "required": true,
              "array": false,
              "elements": ["paid", "pending", "failed"]
            }
          ],
          "indexes": [
            {
              "key": "customerId",
              "type": "key",
              "attributes": ["customerId"]
            },
            {
              "key": "invoiceNumber",
              "type": "unique",
              "attributes": ["invoiceNumber"]
            },
            {
              "key": "date",
              "type": "key",
              "attributes": ["date"]
            },
            {
              "key": "status",
              "type": "key",
              "attributes": ["status"]
            }
          ]
        },
        {
          "id": "settings",
          "name": "Settings",
          "permissions": ["read(\"any\")", "write(\"team:admin\")"],
          "attributes": [
            {
              "key": "general",
              "type": "string",
              "size": 65535,
              "required": true
            },
            {
              "key": "company",
              "type": "string",
              "size": 65535,
              "required": true
            },
            {
              "key": "invoice",
              "type": "string",
              "size": 65535,
              "required": true
            },
            {
              "key": "notifications",
              "type": "string",
              "size": 65535,
              "required": true
            }
          ]
        },
        {
          "id": "categories",
          "name": "Categories",
          "permissions": ["read(\"any\")", "write(\"team:admin\")"],
          "attributes": [
            {
              "key": "name",
              "type": "string",
              "size": 255,
              "required": true
            },
            {
              "key": "slug",
              "type": "string",
              "size": 255,
              "required": true
            },
            {
              "key": "parentId",
              "type": "string",
              "size": 255,
              "required": false
            },
            {
              "key": "description",
              "type": "string",
              "size": 65535,
              "required": false
            },
            {
              "key": "level",
              "type": "integer",
              "required": true,
              "min": 0,
              "default": 0
            }
          ],
          "indexes": [
            {
              "key": "slug",
              "type": "unique",
              "attributes": ["slug"]
            },
            {
              "key": "parentId",
              "type": "key",
              "attributes": ["parentId"]
            }
          ]
        }
      ]
    }
  ],
  "buckets": [
    {
      "id": "product_images",
      "name": "Product Images",
      "permissions": ["read(\"any\")", "write(\"team:admin\")"],
      "fileSizeLimit": 5242880,
      "allowedFileExtensions": ["jpg", "jpeg", "png", "webp"]
    },
    {
      "id": "company_logos",
      "name": "Company Logos",
      "permissions": ["read(\"any\")", "write(\"team:admin\")"],
      "fileSizeLimit": 2097152,
      "allowedFileExtensions": ["jpg", "jpeg", "png", "webp"]
    }
  ]
} 